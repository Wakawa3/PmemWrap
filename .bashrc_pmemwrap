export PMEMWRAP_HOME="/home/satoshi/artifact/PmemWrap"

export CPATH="${PMEMWRAP_HOME}/wrapinclude:${CPATH}"
export ASAN_OPTIONS=halt_on_error=0:suppressions=${PMEMWRAP_HOME}/MyASan.supp

# export PMDK_INSTALL="${PMEMWRAP_HOME}/pmdk_install"
# export PMEMWRAP_SOLIB_PATH="${PMDK_INSTALL}/lib"

export PMDK_INSTALL="${PMEMWRAP_HOME}/safepm/build/pmdk/install"
export PMEMWRAP_SOLIB_PATH="${PMDK_INSTALL}/lib/pmdk_debug"

export CPATH="${CPATH}:${PMDK_INSTALL}/include"

export LD_LIBRARY_PATH="${PMEMWRAP_SOLIB_PATH}"
export LIBRARY_PATH="${PMEMWRAP_SOLIB_PATH}"
export LD_LIBRARY_PATH="${PMEMWRAP_HOME}/lib:${LD_LIBRARY_PATH}"
export LIBRARY_PATH="${PMEMWRAP_HOME}/lib:${LIBRARY_PATH}"

export PMEMWRAP_ABORT=0
export PMEMWRAP_WRITECOUNTFILE=YES
export PMEMWRAP_SEED=0
export PMEMWRAP_MEMCPY=RAND_MEMCPY